<div class="container">
  <div class="row">
    <div class="col-md-10 offset-md-1 mt-2">
      <h2 class="text-center mb-2 fs-2">tags</h2>
      <%= render 'public/posts/tag_index', tags: @tags %>
    </div>
  </div>
  <div class="row">
    <div class="col-md-10 offset-md-1 mt-2">
      <h2 class="text-center mt-5 mb-2 fs-2">posts</h2>
    </div>
    <div class="col-md-1 offset-md-10 mt-2">
      <%= link_to 'latest', posts_path(latest: "true"), class: "fs-1" %>
    </div>
    <div class="col-md-1 mt-2">
      <%= link_to 'old', posts_path(old: "true"), class: "fs-1" %>
    </div>
    <div class="d-flex flex-wrap">
      <%= render 'public/posts/index_form', posts: @posts %>
    </div>
  </div>
  <div class="row">
    <div class="col-md-12">
      <p><%= paginate @posts, theme: 'twitter-bootstrap-4' %></p>
    </div>
  </div>
</div>