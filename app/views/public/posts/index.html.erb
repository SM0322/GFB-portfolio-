<div class="container">
  <div class="row">
    <div class="col-md-10 offset-md-1 mt-2">
      <h2 class="text-center mb-2 fs-2">Tags</h2>
      <%= render 'public/posts/tag_index', tags: @tags %>
    </div>
  </div>
  <div class="row">
    <div class="col-md-10 offset-md-1 mt-2">
      <h2 class="text-center mt-5 mb-2 fs-2">Posts</h2>
    </div>
  </div>
  <div class="row">
    <div class="col-12">
      <div class="text-center">
      <%= form_with url:search_path,local: true, method: :get do |f| %>
        <%= f.text_field :word, class: "fs-1" %>
        <%= f.select :range, options_for_select([['Post'],['Customer']]), class: "fs-1" %>
        <%= f.select :search, options_for_select([["完全一致","perfect_match"], ["部分一致","partial_match"]]), class: "fs-1" %>
        <%= f.submit "検索", class: "fs-1" %>
      <% end %>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="col-md-1 offset-md-10 mt-2">
      <%= link_to 'Latest', posts_path(latest: "true"), class: "fs-1" %>
    </div>
    <div class="col-md-1 mt-2">
      <%= link_to 'Old', posts_path(old: "true"), class: "fs-1" %>
    </div>
  </div>
  <div class="row">
    <div class="col-12 mt-2">
      <div class="d-flex flex-wrap">
        <%= render 'public/posts/index_form', posts: @posts %>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="col-md-12">
      <p><%= paginate @posts, theme: 'twitter-bootstrap-4' %></p>
    </div>
  </div>
</div>