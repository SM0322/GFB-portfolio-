<h1>投稿詳細</h1>

<table>
  <tr>
    <td>作品名</td>
    <td><%= @post.title %></td>
  </tr>
  <tr>
    <td>説明</td>
    <td><%= @post.introduction %></td>
  </tr>
  <tr>
    <td>タグ</td>
    <% @tag.each do |tag| %>
      <td><%= link_to tag.name, search_tag_path(tag_id: tag.id) %></td>
    <% end %>
  </tr>
</table>

<p><%= link_to '編集する', edit_post_path %></p>