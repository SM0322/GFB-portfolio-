<div class="row">
  <div class="col-md-12">
    <h2 class="text-center fs-2">Profile</h2>
  </div>
</div>
<div class="row">
  <div class="col-md-12">
    <p class="text-center">
    <% if customer.profile_image.attached? %>
      <%= image_tag customer.profile_image, style: "border-radius: 50%; width: 200px; height: 200px; object-fit:cover;" %>
    <% else %>
      <%= image_tag 'no_image.jpg', style: "border-radius: 50%; width: 200px; height: 200px; object-fit:cover;" %>
    <% end %>
    </p>
  </div>
</div>
<div class="row">
  <div class="col-md-12">
    <p class="text-center fs-2">Name</p>
  </div>
</div>
<div class="row">
  <div class="col-md-12">
    <p class="text-center fs-1"><%= customer.name %></p>
  </div>
</div>
<div class="row">
  <div class="col-md-12">
    <p class="text-center fs-2">Introduction</p>
  </div>
</div>
<div class="row">
  <div class="col-md-12">
    <p class="text-center fs-1"><%= customer.introduction %></p>
  </div>
</div>
<div class="row">
  <div class="col-md-12">
    <p class="text-center fs-1">
      フォロー: <%= link_to customer.followings.count, customer_followings_path(customer) %>/
      フォロワー: <%= link_to customer.followers.count, customer_followers_path(customer) %>
    </p>
  </div>
</div>
<% if customer == current_customer %>
<div class="row">
  <div class="col-md-12 mt-2 mb-4">
    <h2 class="text-center mb-2"><%= link_to 'Follow_posts', follow_posts_customer_path,class: "fs-2" %></h2>
  </div>
</div>
<% end %>
<div class="row">
  <div class="col-md-12">
    <% if current_customer.following?(customer) %>
      <div class="col-md-2 offset-md-5 text-center"><%= link_to 'unfollow', customer_relationships_path(customer.id), method: :delete, class: "edit_btn" %></div>
    <% else %>
      <div class="col-md-2 offset-md-5 text-center"><%= link_to "follow", customer_relationships_path(customer.id), method: :post, class: "edit_btn" %></div>
    <% end %>
  </div>
</div>
<div class="row">
  <div class="col-md-12">
    <p class="text-center"><%= link_to "view more posts", customer_path(customer), class: "fs-2" %></p>
  </div>
</div>
<div class="row">
  <div class="col-md-12 mt-2 mb-4">
    <h2 class="text-center mb-2"><%= link_to 'Favorites', favorites_customer_path(customer),class: "fs-2" %></h2>
  </div>
</div>
<div class="row">
  <div class="col-md-12">
    <% if customer == current_customer %>
      <div class="col-md-1 offset-md-5 text-center"><%= link_to 'edit', edit_customer_path(customer), class: "edit_btn" %></div>
    <% end %>
  </div>
</div>
