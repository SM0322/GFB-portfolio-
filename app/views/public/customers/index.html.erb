<div class="container">
  <div class="row">
    <div class="col-md-10 offset-md-1 mt-2">
      <h2 class="text-center mb-2 fs-2">Users</h1>
    </div>
  </div>
  <div class="row">
    <div class="col-12">
      <div class="text-center">
      <%= form_with url:search_path,local: true, method: :get do |f| %>
        <%= f.text_field :word, class: "fs-1" %>
        <%= f.select :range, options_for_select([['Customer'],['Post']]), class: "fs-1" %>
        <%= f.select :search, options_for_select([["完全一致","perfect_match"], ["部分一致","partial_match"]]), class: "fs-1" %>
        <%= f.submit "検索", class: "fs-1" %>
      <% end %>
      </div>
    </div>
  </div>
  <div class="row mt-5">
    <div class="d-flex flex-wrap">
      <%= render 'public/customers/index_form', customers: @customers %>
    </div>
  </div>
  <div class="row">
    <div class="col-md-12">
      <p><%= paginate @customers, theme: 'twitter-bootstrap-4' %></p>
    </div>
  </div>
</div>