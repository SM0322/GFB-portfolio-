<div class="container">
  <div class="row mt-2">
    <div class="col-md-6 offset-md-3 box">
      <%= render 'public/customers/customer_info', customer: current_customer %>
    </div>
  </div>
  <div class="row mt-2">
    <div class="col-md-10 offset-md-1 mt-2">
      <h2 class="text-center mb-2 fs-2">Favorites_Posts</h2>
      <div class="d-flex flex-wrap">
        <%= render 'public/posts/index_form', posts: @posts %>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="col-md-12">
      <p><%= paginate @posts, theme: 'twitter-bootstrap-4' %></p>
    </div>
  </div>
</div>