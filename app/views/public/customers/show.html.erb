<h1>会員詳細</h1>

<table>
  <tr>
    <td>ユーザー名</td>
    <td><%= @customer.name %></td>
  </tr>
  <tr>
    <td>自己紹介</td>
    <td><%#= @customer.introduction %></td>
  </tr>
  <tr>
    <td><%= link_to '編集する', edit_customer_path(@customer) %></td>
  </tr>
</table>

<h1><%= @customer.name %>さんの投稿一覧</h1>
<% @posts.each do |post| %>
<table>
  <tr>
    <td>投稿名</td>
    <td><%= link_to post.title, post_path(post) %></td>
  </tr>
  <tr>
    <td>いいね数</td>
    <td>
      <% if post.favorited_by?(@customer) %>
        <p>
          <%= link_to favorites_path(post_id: post.id), method: :delete do %>
            ♡<%= post.favorites.count %>いいね
          <% end %>
        </p>
      <% else %>
        <p>
          <%= link_to favorites_path(post_id: post.id), method: :post do %>
            ♡<%= post.favorites.count %>いいね
          <% end %>
        </p>
      <% end %>
    </td>
  </tr>
</table>
<% end %>