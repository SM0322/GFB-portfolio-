<div class="container">
  <div class="row">
    <div class="col-md-10 offset-md-1 mt-2">
      <h2 class="text-center mt-5 mb-2 fs-2">Groups</h2>
    </div>
  </div>
  <div class="row">
    <div class="col-12 mt-2">
      <div class="d-flex flex-wrap">
        <% @groups.each do |group| %>
        <div class="col-md-6 col-sd-12 mx-auto m-5 border-bottom border-secondary">
          <div class="row">
            <div class="mx-auto">
              <p class="text-center fs-1"><%= image_tag group.group_image.variant(resize: "350").processed %></p>
            </div>
          </div>
          <div class="row">
            <div class="mx-auto">
              <p class="text-center fs-1"><%= link_to group.name, group_path(group) %></p>
            </div>
          </div>
          <div class="row">
            <div class="mx-auto">
              <p class="text-center fs-1"><%= group.created_at.strftime('%Y/%m/%d') %></p>
            </div>
          </div>
          <div class="row">
            <div class="mx-auto">
              <p class="text-center fs-1"><%= group.customers.count %></p>
            </div>
          </div>
        </div>
        <% end %>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="col-md-12">
      <p><%= paginate @groups, theme: 'twitter-bootstrap-4' %></p>
    </div>
  </div>
</div>