<div>
  <%= form_with url:search_path,local: true, method: :get do |f| %>
    <%= f.text_field :word %>
    <%= f.select :range, options_for_select([['Customer'],['Post']]) %>
    <%= f.select :search, options_for_select([["完全一致","perfect_match"], ["部分一致","partial_match"]]) %>
    <%= f.submit "検索" %>
  <% end %>
</div>

<h2>結果</h2>
<% if @range == "Customer" %>
  <% @customers.each do |customer| %>
    <%= customer.name %>
  <% end %>
<% else %>
  <% @posts.each do |post| %>
    <%= post.title %>
  <% end %>
<% end %>