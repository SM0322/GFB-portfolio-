<div class="container">
  <div class="row">
    <div class="col-9 offset-1 mt-2">
      <h2 class="text-center mb-2 fs-2"><%= @customer.name %>'s Comments</h2>
        <div class="d-flex flex-wrap">
        <% @post_comments.each do |comment| %>
          <div class="m-4">
            <p class="fs-1">For <%= link_to comment.post.title, admin_post_path(comment.post) %></p>
            <p class="fs-1"><%= comment.message %></p>
            <p class="fs-1"><%= comment.created_at.strftime('%Y/%m/%d') %></p>
            <p class="fs-1"><%= link_to 'Delete', admin_post_comment_path(comment), method: :delete,class: "btn btn-danger" %></p>
          </div>
        <% end %>
        </div>
    </div>
  </div>
</div>