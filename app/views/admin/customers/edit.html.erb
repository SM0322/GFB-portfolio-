<h1>ユーザー編集画面</h1>
<%= form_with model: @customer, url: admin_customer_path(@customer), method: :patch do |f| %>
<table>
  <tr>
    <td>ユーザー名</td>
    <td><%= f.text_field :name %></td>
  </tr>
  <tr>
    <td>画像選択</td>
    <td><%#= f.text_field :name %></td>
  </tr>
  <tr>
    <td>自己紹介</td>
    <td><%#= f.text_field :introduction %></td>
  </tr>
  <tr>
    <td>メールアドレス</td>
    <td><%= f.text_field :email, autofocus: true, autocomplete: "email" %></td>
  </tr>
  <tr>
    <td>会員ステータス</td>
    <td>
      <%= f.label :is_deleted, '有効', value: false %>
      <%= f.radio_button :is_deleted, 'false' %>
      <%= f.label :is_deleted, '退会済み', value: true %>
      <%= f.radio_button :is_deleted, 'true' %>
    </td>
  </tr>
  <tr>
    <td></td>
    <td><%= f.submit "変更を保存する" %></td>
  </tr>
</table>
<% end %>