<div class="container">
  <div class="row mt-2">
    <div class="col-md-6 offset-md-3">
      <%= render 'admin/customers/customer_info', customer: @customer %>
    </div>
  </div>
  <div class="row mt-2">
    <div class="col-12 mt-2">
      <h2 class="text-center mb-2 fs-2">Posts</h2>
      <div class="d-flex flex-wrap">
        <%= render 'admin/posts/index_form', posts: @posts %>
      </div>
      <div class="col-md-2 offset-md-5 col-sm-6 offset-sm-3 mt-2">
        <%= paginate @posts, class: "fs-2" %>
      </div>
      <div class="mt-2 mb-4">
        <h2 class="text-center mb-2 fs-2"><%= link_to @customer.name, post_comments_admin_customer_path(@customer), class:"fs-2" %>さんのコメント一覧</h2>
      </div>
    </div>
  </div>
</div>